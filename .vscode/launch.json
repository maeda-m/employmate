{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Attach to Container on Rails",
      "type": "rdbg",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "script": "bin/rails server",
      "args": ["-b 0.0.0.0"],
      "askParameters": true,
      "useBundler": true
    }
  ]
}
