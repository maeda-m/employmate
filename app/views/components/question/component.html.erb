<%= turbo_frame_tag(frame_id, hidden: true) do %>
<section>
  <hgroup>
    <p><%= title %></p>
    <h2><%= body %></h2>
    <p></p>
  </hgroup>

  <%= render(field_component.new(required:)) %>

  <hr>
  <%= button_tag('戻る', formaction: back_survey_question_path(survey_id:, id:), data: { action: 'click->survey-profiles#hide', frame_id: }) %>
  <%= button_tag('次へ', formaction: next_survey_question_path(survey_id:, id:), data: { action: 'click->survey-profiles#hide', frame_id: }) unless automatable? %>
</section>
<% end %>
