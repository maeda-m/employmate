<hgroup>
  <p><%= description %></p>
  <h2><%= subject %></h2>
  <p></p>
</hgroup>

<% 6.times do |i| %>
  <%= fields(record_name, index: i) do |f| %>
    <%= f.label(:value, '') %>
    <%= f.number_field(:value, value: 0, class: 'overtime', required:, max: 720, min: 0, step: 1) %>
  <% end %>
<% end %>
