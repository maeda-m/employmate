<hgroup>
  <p><%= description %></p>
  <h2><%= subject %></h2>
  <p></p>
</hgroup>

<% FIELD_COUNT.times do |i| %>
  <div class="grid">
    <% name = "#{record_name}[values][#{i}]" %>
    <%= label_tag(name, nil, class: 'overtime') %>
    <%= number_field_tag(name, 0, class: 'overtime', required:, max: 720, min: 0, step: 1, placeholder: 60, autocomplete: 'off') %>
    <span>時間</span>
  </div>
<% end %>
