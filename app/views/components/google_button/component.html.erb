<div id="g_id_onload" data-client_id="<%= client_id %>" data-context="<%= context %>" data-ux_mode="redirect" data-state="<%= state %>" data-scope="openid" data-login_uri="<%= redirect_url %>" data-auto_prompt="false">
</div>

<%# See: https://developers.google.com/identity/gsi/web/reference/html-reference?hl=ja#element_with_class_g_id_signin %>
<div class="g_id_signin" data-type="standard" data-shape="rectangular" data-theme="outline" data-text="<%= caption %>" data-size="large" data-width="400" data-locale="ja" data-logo_alignment="left">
</div>

<script>
  const width = document.querySelector('.look-like-google-button').clientWidth
  if (width) {
    document.querySelector('div.g_id_signin').dataset['width'] = width
  }
</script>
