<% if @question %>
  <% if @question.answer_component.overtime? %>
    <%= render(partial: '/components/overtime_field/field_show', locals: { question: @question, prev_answer: @current_answer_value }) %>
  <% end %>

  <%= render(partial: 'navigate', locals: { question: @question }) %>
<% else %>
  <%= turbo_stream.append 'survey-profiles' do %>
    <script>
      document.querySelector('input[type="submit"]').hidden = false
    </script>
  <% end %>
<% end %>
