<% survey_id = question.questionnaire.survey_id %>
<%= turbo_frame_tag(dom_id(question), hidden: true, data: { formaction: next_survey_question_path(survey_id:, id: question.id) }) do %>
  <header>
    <%= link_to(caption_with_back_icon, root_path, class: 'visit-welcome', role: 'link', hidden: true, data: { turbo: false }) %>
    <%= button_tag(caption_with_back_icon, class: 'show-prev-question', role: 'link', formaction: back_survey_question_path(survey_id:, id: question.id), formnovalidate: true) %>
  </header>
  <section>
    <%= render(question.field_component.new(question:, description: question.questionnaire.title)) %>
  </section>
  <footer>
    <%= button_tag('次へ', data: { action: 'click->survey-profiles#showNextQuestionWithCurrentQuestionValid:prevent' }) %>
  </footer>
<% end %>
